<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: dimgray; -fx-border-width: 10; -fx-border-color: gray;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.TaskController">
    <children>
        <Label fx:id="name" layoutX="56.0" layoutY="33.0" prefHeight="44.0" prefWidth="489.0" style="-fx-alignment: center;" text="Task" textFill="WHITE">
            <font>
                <Font name="Agency FB" size="36.0" />
            </font>
        </Label>
        <TextField fx:id="answer" layoutX="289.0" layoutY="243.0" prefHeight="42.0" prefWidth="196.0" />
        <Label layoutX="139.0" layoutY="242.0" prefHeight="35.0" prefWidth="124.0" text="Answer" textFill="WHITE">
            <font>
                <Font name="Agency FB" size="36.0" />
            </font>
        </Label>
        <Button fx:id="submitButton" layoutX="227.0" layoutY="320.0" mnemonicParsing="false" onAction="#submit" prefHeight="51.0" prefWidth="124.0" text="Submit">
            <font>
                <Font size="24.0" />
            </font>
        </Button>
      <Label fx:id="correctAnswer" text="Label" visible="false" />
      <Label fx:id="incorrect" layoutX="394.0" layoutY="328.0" prefHeight="35.0" prefWidth="152.0" text="Incorrect answer! Try again!" textFill="WHITE" visible="false" />
      <TextArea fx:id="question" editable="false" layoutX="37.0" layoutY="131.0" prefHeight="72.0" prefWidth="527.0" text="some coding question" wrapText="true">
         <font>
            <Font name="Agency FB" size="18.0" />
         </font>
      </TextArea>
    </children>
</AnchorPane>
